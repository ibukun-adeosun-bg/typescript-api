    "url": "https://github.com/ibukun-adeosun-bg/typescript-api/issues"
  },
  "homepage": "https://github.com/ibukun-adeosun-bg/typescript-api#readme",
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^18.15.1",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "nodemon": "^2.0.21",
    "prettier": "^2.8.4",
    "tsc-watch": "^6.0.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "module-alias": "^2.2.2"
  },
  "_moduleAliases": {
    "@/utils/*": "dist/utils",
    "@/middleware/*": "dist/middleware",
    "@/controllers/*": "dist/controllers",
